<h1>User <%= @user.name %> belongs to groups</h1>

<% if @groups.present? %>
        <ul>
        <% @groups.each do |group| %>
                <li><%= link_to group.name, group_path(group) %>
                </li>
        <% end %>
        </ul>
        <%= link_to "All groups", groups_path %>
<% end %>

