<h1>User <%= @user.name %> belongs to groups</h1>

<% if @groups.present? %>
        <ul>
        <% @groups.each do |group| %>
                <li><%= link_to group.name, group_path(group) %>
               		<%= link_to "Leave", delete_group_user_path(group, @user) , :confirm => "Are you sure?", :method => :delete %>
		</li>
        <% end %>
        </ul>
        <%= link_to "All groups", groups_path %>
<% end %>

