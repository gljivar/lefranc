<h2>Recent groups</h2>
<p>
  <% if @groups.count > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Foreign language</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td><%= group.foreign_language.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br />
  <%= link_to "Your groups", user_groups_path(current_user), :class => 'btn btn-primary' %>
  <%= link_to "Join groups", groups_path, :class => 'btn btn-primary' %>
  </br></br>
  <% else %>
    <p>You are not a member of any group.
       </br></br>
       <%= link_to "Join groups", groups_path %></br></br>
    </p>
 
  <% end %>  
</p>

<h2>Recent lessons</h2>
<p>

  <%= render "lessons/lessons_table_form" %>
  
  <% if @lessons.count > 0 %>
  <br />
  <%= link_to "Lessons", user_lessons_path(current_user), :class => 'btn btn-primary' %></br></br>
  <% else %>
    <p>You are not following any lessons. Join some group and follow or create lessons!</p>
  <% end %>
</p>

