<% if @lessons.present? and @lessons.count > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.name, lesson %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
