<h1>User <%= @user.name %> goes to lessons</h1>

<% if @lessons.present? %>
        <ul>
        <% @lessons.each do |lesson| %>
                <li><%= link_to lesson.name, lesson_path(lesson) %>
                </li>
        <% end %>
        </ul>
        <%= link_to "All lessons", lessons_path %>
<% end %>

